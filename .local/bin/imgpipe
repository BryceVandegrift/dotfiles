#!/bin/sh

# A script that pipes an image to nsxiv

tmpfile="${TMPDIR:-/tmp}/imgpipe_$$"
trap 'rm -f -- $tmpfile' EXIT

if [ "$#" -eq 0 ]; then
	if [ -t 0 ]; then
		echo "$0: No arguments provided" >&2; exit 1
	else
		cat > "$tmpfile"
	fi
fi

for arg in "$@"; do
	[ -p "$arg" ] && cat "$arg" > "$tmpfile"
done

if [ -s "$tmpfile" ]; then
	nsxiv -p -a -q "$@" "$tmpfile"
else
	nsxiv -p -a "$@"
fi
