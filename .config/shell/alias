#!/bin/sh

# Color aliases
alias ls="ls -hN --color=auto --group-directories-first"
alias ip="ip -color=auto"
alias diff="diff --color=auto"
alias grep="grep --color=auto"

# sfeed aliases
alias feeds="sfeed_update $SFEED_SOURCE"
alias rss="sfeed_curses $SFEED_FEEDS/*"

# Custom aliases
alias ed="ed -p '*'"
alias yt-dlp="yt-dlp --embed-metadata -i"
